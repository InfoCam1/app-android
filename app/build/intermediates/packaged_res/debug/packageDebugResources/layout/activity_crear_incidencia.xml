<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crear_incidencia_title"
            android:textSize="24sp"
            android:textColor="@color/text_white"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/etNombreIncidencia"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_rounded_input"
            android:hint="@string/nombre_incidencia"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:paddingStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tipo_incidencia"
            android:textColor="@color/text_gray"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="4dp"/>

        <Spinner
            android:id="@+id/spTipoIncidencia"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_rounded_input"
            android:layout_marginTop="4dp"
            android:paddingStart="16dp"
            android:spinnerMode="dropdown"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/causa_incidencia"
            android:textColor="@color/text_gray"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="4dp"/>

        <EditText
            android:id="@+id/etCausa"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_rounded_input"
            android:hint="@string/causa_incidencia"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:padding="16dp"
            android:layout_marginTop="4dp"
            android:gravity="top|start"
            android:inputType="textMultiLine"/>

        <EditText
            android:id="@+id/etFechaInicio"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_rounded_input"
            android:hint="@string/fecha_inicio"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:paddingStart="16dp"
            android:layout_marginTop="16dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="true"/>

        <EditText
            android:id="@+id/etFechaFin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_rounded_input"
            android:hint="@string/fecha_fin"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:paddingStart="16dp"
            android:layout_marginTop="16dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="true"/>

        <Button
            android:id="@+id/btnGuardarIncidencia"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_rounded_button"
            android:text="@string/guardar"
            android:textColor="@color/background_dark"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:backgroundTint="@color/action_red"/>

    </LinearLayout>
</ScrollView>
