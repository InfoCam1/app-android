<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.infocam">

    <!-- Permisos requeridos -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Opcionales para ubicación usuario, aunque no estrictamente requeridos por la lógica actual, son comunes en mapas -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.InfoCam">


        <!-- Login es el Launcher -->
        <activity android:name=".ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".ui.RegisterActivity"
            android:exported="false"
            android:parentActivityName=".ui.LoginActivity"/>

        <activity android:name=".ui.MainActivity"
            android:exported="false"
            android:label="@string/app_name" />

        <activity android:name=".ui.CrearIncidenciaActivity"
            android:parentActivityName=".ui.MainActivity"
            android:exported="false"/>

        <activity android:name=".ui.FullScreenImageActivity"
            android:exported="false"
            android:theme="@style/Theme.InfoCam.FullScreen"/>

    </application>

</manifest>
